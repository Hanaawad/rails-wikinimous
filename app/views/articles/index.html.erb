<h1>My artciles</h1>
<% @articles.each do |article| %>
<li class="display">
  <h2><%=link_to article.title, article_path(article) %></h2>
  <%= link_to article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
</li>
 </li>
<% end %>

